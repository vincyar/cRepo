#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout,NULL);
		char a[20];
		int i,j,n,flag=0;
		printf("Enter the limit");
		scanf("%d",&n);
		for(i=0;i<n;i++){
			for(j=n-1;j>=0;j--){
				if(a[i]==a[j]){
					printf("Number is palindrome");
				}else{
					flag=1;
					break;
				}
			}
		}if(flag==1){
			printf("Number isn't palindrome");
		}




	return EXIT_SUCCESS;
}
